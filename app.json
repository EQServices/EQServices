{
  "expo": {
    "name": "Elastiquality",
    "slug": "elastiquality",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-512x512.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "elastiquality",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a",
      "dark": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#020617"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.elastiquality.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Precisamos da sua localização para encontrar profissionais próximos a você.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Precisamos da sua localização para encontrar profissionais próximos a você."
      },
      "associatedDomains": [
        "applinks:elastiquality.pt"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-512x512.png",
        "backgroundColor": "#2f61a6"
      },
      "package": "com.elastiquality.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "elastiquality.pt",
              "pathPrefix": "/"
            },
            {
              "scheme": "elastiquality"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon-32x32.png",
      "name": "Elastiquality",
      "shortName": "Elastiquality",
      "description": "Conectando clientes a profissionais de serviços locais",
      "themeColor": "#2f61a6",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon-192x192.png",
          "color": "#2f61a6",
          "sounds": []
        }
      ],
      "expo-secure-store",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "elastiquality-ut"
        }
      ]
    ]
  }
}
